<p id="notice"><%= notice %></p>
<div class="container-fluid mx-0 sticky-top bg-dark bg-gradient shadow-sm d-flex align-items-center" style="height:7%;">
    <h1 class="text-center"><%= link_to "Reuty", home_path, class: "link" %></h1>
</div>
<div>&nbsp;</div>
<div class="text-end">
    <%= link_to image_tag("/assets/put_entry.png"), put_entry_new_path %>
</div>



<table class="table table-sm">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th><h3>商品名</h3></th>
            <th><h3>価格</h3></th>
            <th><h3>&nbsp;</h3></th>
            <th><h3>&nbsp;</h3></th>                        
            <th colspan="3"></th>
        </tr>
    </thead>

    
    <tbody class="table-group-divider">
        <% @products.each do |product| %>
                <tr>
                    <td>
                        <div class="img-list">
                        <% if product.image.present? %>
                            <%= image_tag "product/#{product.image}", {class: "img-fluid"} %>
                        <% end %>
                    </td>
                    <td class="text-list"><h3><%= product.name %><h3></td>
                    <td class="text-list"><h3><%= product.price %><h3></td>
                    <td class="text-list"><h3><%= link_to '編集', put_entry_edit_path(product.id) %><h3></td>
                    <td class="text-list"><h3><%= link_to '削除', put_entry_destroy_path(product.id), method: :delete, data: { confirm: 'Are you sure?' } %></h3></td>
                </tr>
        <% end %>
    </tbody>
</table>



