<div class="sticky-top text-bg-dark bg-gradient  shadow-sm d-flex align-items-center" style="height:50px;">
    <div class="container">
        <div class="row">
            <h2 class="col">出品一覧</h2>
        </div>
    </div>
</div>

<div class="text-end">
    <%= link_to image_tag("/assets/put_entry.png"), put_entry_new_path %>
</div>


<table class="table table-sm">
    <thead>
        <tr>
            <th><h4>&nbsp;</h4></th>
            <th><h4>商品名</h4></th>
            <th><h4>価格</h4></th>
            <th><h4>&nbsp;</h4></th>
            <th><h4>&nbsp;</h4></th>                        
            <th colspan="3"></th>
        </tr>
    </thead>

    
    <tbody>
        <% @products.each do |product| %>
                <tr>
                    <td width="200px">
                        <% if product.image.present? %>
                            <%= image_tag "product/#{product.image}", {class: "img-fluid"} %>
                        <% end %>
                    </td>
                    <td width="200px"><%= product.name %></td>
                    <td width="100px"><%= product.price %></td>
                    <td><%= link_to '編集', put_entry_edit_path(product.id) %></td>
                    <td><%= link_to '削除', put_entry_destroy_path(product.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
        <% end %>
    </tbody>
</table>



