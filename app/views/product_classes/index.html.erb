<p id="notice"><%= notice %></p>

<h1>Product Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_classes.each do |product_class| %>
      <tr>
        <td><%= product_class.name %></td>
        <td><%= link_to 'Show', product_class %></td>
        <td><%= link_to 'Edit', edit_product_class_path(product_class) %></td>
        <td><%= link_to 'Destroy', product_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Class', new_product_class_path %>
