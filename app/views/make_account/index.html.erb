<h1 class="text-center">Reutyへようこそ！</h1>
<h2 class="text-center">アカウント作成</h2>

<%= form_with url: make_account_create_path, model: @user do |form| %>
    
    <div class = "row mb-3">
        <div class="col-xs-3">
            <div class="d-flex justify-content-center">
                <label for="name">名前</label>
                <%= form.text_field :name %>
            </div>    
        </div>    
    </div>
    <div class = "row mb-3">  
        <div class="col-xs-3">
            <div class="d-flex justify-content-center">
                <label for="password">パスワード</label>
                <%= form.text_field :password %>
            </div>    
        </div>
    </div>
    <div class = "row mb-3">  
        <div class="col-xs-3">
            <div class="d-flex justify-content-center">
                <label for="mail">メールアドレス</label>
                <%= form.text_field :mail %>
            </div>    
        </div>    
    </div>
    <div class = "row mb-3">
        <div class="col-xs-3">  
            <div class="d-flex justify-content-center">
                <label for="address">住所</label>
                <%= form.text_field :address %>
            </div>    
        </div>    
    </div>
    <div class = "row mb-3">
        <div class="col-xs-3">  
            <div class="d-flex justify-content-center">
                <label for="image">プロフィール画像</label>
                <%= form.file_field :image %>
            </div>    
        </div>    
    </div>
    <div class = "row mb-3">
        <div class="col-xs-3">  
            <div class="d-flex justify-content-center">
                <%= form.submit "アカウントを作成する" %>
            </div>
        </div>    
    </div>
    <div class="col-xs-3">
        <div class="d-flex justify-content-center">
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </div> 
    </div>       

<% end %>   
