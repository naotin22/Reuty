<p id="notice"><%= notice %></p>
<div class="sticky-top text-bg-dark bg-gradient  shadow-sm d-flex align-items-center" style="height:50px;">
  <div class="container">
    <div class="row">
      <h2 class="col">お気に入り一覧</h2>
      <div class="col"><%= link_to image_tag("/assets/back.png"), home_path %></div>
    </div>
  </div>
</div>
<table class="table table-sm">
  <thead>
    <tr>
      <th><h4>商品画像</h4></th>
      <th><h4>商品名</h4></th>
      <th><h4>価格</h4></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
    
    <% @favorites.each do |favorite| %>
      <tr>
        <td>
          <div class="img-list">
              <% if favorite.product.image.present? %>
                <%= link_to image_tag("/assets/product/#{favorite.product.image}"), product_detail_path(favorite.product.id) %>
              <% else %>
                <%= link_to image_tag("/assets/product/sample.jfif"), product_detail_path(favorite.product.id) %>
              <% end %>
          </div>
        </td>
        <td><h4><div class="text-list"><%= favorite.product.name %></div><h4></td>
        <td><h4><div class="text-list">￥<%= favorite.product.price %></div><h4></td>
        <td><h4><div class="text-list"><%= link_to '削除', like_destroy_path(favorite.id), method: :delete, data: { confirm: 'Are you sure?' } %></div></h4></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to image_tag("/assets/back.png"), home_path %>