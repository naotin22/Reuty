<p id="notice"><%= notice %></p>

<h1>Report Classes</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_classes.each do |report_class| %>
      <tr>
        <td><%= report_class.comment %></td>
        <td><%= link_to 'Show', report_class %></td>
        <td><%= link_to 'Edit', edit_report_class_path(report_class) %></td>
        <td><%= link_to 'Destroy', report_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report Class', new_report_class_path %>
